{
    "name": "kiwilan/php-notifier",
    "description": "PHP Notifier is a package to add some useful classes to send notifications.",
    "version": "0.0.1",
    "keywords": [
        "laravel",
        "notifier",
        "slack",
        "mail",
        "discord"
    ],
    "homepage": "https://github.com/kiwilan/php-notifier",
    "license": "MIT",
    "authors": [
        {
            "name": "Ewilan Rivi√®re",
            "email": "ewilan.riviere@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/mailer": "^6.4"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.8",
        "pestphp/pest": "^2.15",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Kiwilan\\Notifier\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kiwilan\\Notifier\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-filter": "vendor/bin/pest --filter",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
